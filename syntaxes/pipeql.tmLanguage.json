{
	"name": "Pipe Query Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#variable"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.pipeql",
				"match": "(select|update|import|reform|asc|desc|print|write|note|unique|error)"
			}]
		},
		"variable": {
			"patterns": [{
				"name": "variable.language.default.pipeql",
				"match": "(csv|query|if|->)"
			}]
		},
		"strings": {
			"name": "string.quoted.double.pipeql",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pipeql",
					"match": "\\\\."
				}
			]
		},
		"comment": {
			"patterns": [{
				"name": "comment.pipeql",
				"match": "(//.*)"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "entity.name.function.pipeql",
				"match": "(\\b\\d+|id|arity|true|false)"
			}]
		}
	},
	"scopeName": "source.pipeql"
}

